---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer';
import { Search, Filter, ArrowRight, Clock, User, Calendar, ChevronRight } from 'lucide-react';

const stories = [
    {
        id: 1,
        slug: "the-ultimate-guide-to-cinque-terres-best-beaches",
        title: "The Ultimate Guide to Cinque Terre's Best Beaches",
        excerpt: "From the sandy shores of Monterosso to the hidden rocky coves of Riomaggiore, we explore the most pristine swimming spots in the Italian Riviera.",
        author: "Giulia Rossi",
        date: "Oct 15, 2023",
        readTime: "8 min read",
        category: "Guides",
        image: "https://images.unsplash.com/photo-1534445867742-43195f401b6c?q=80&w=2670&auto=format&fit=crop",
        isLead: true
    },
    {
        id: 2,
        slug: "5-hidden-gelaterias-you-need-to-try",
        title: "5 Hidden Gelaterias You Need to Try",
        excerpt: "Skip the tourist traps and find the real deal. Our local experts reveal where to find the creamiest artisanal gelato in the five villages.",
        author: "Marco Bianchi",
        date: "Oct 14, 2023",
        readTime: "4 min read",
        category: "Food",
        image: "https://images.unsplash.com/photo-1498503182468-3b51cbb6cb24?q=80&w=2670&auto=format&fit=crop"
    },
    {
        id: 3,
        slug: "a-photographers-guide-to-manarola-at-sunset",
        title: "A Photographer's Guide to Manarola at Sunset",
        excerpt: "Capturing the perfect golden hour shot in Manarola requires timing and positioning. Here are the best angles and secret spots.",
        author: "Elena Moretti",
        date: "Oct 12, 2023",
        readTime: "6 min read",
        category: "Photography",
        image: "https://images.unsplash.com/photo-1516483638261-f4dbaf036963?q=80&w=2574&auto=format&fit=crop"
    },
    {
        id: 4,
        slug: "hiking-the-blue-trail-what-to-expect",
        title: "Hiking the Blue Trail: What to Expect",
        excerpt: "Everything you need to know about the Sentiero Azzurro, from difficulty levels and closures to the most scenic stops along the way.",
        author: "Luca Verdi",
        date: "Oct 10, 2023",
        readTime: "10 min read",
        category: "Guides",
        image: "https://images.unsplash.com/photo-1596394516093-501ba68a0ba6?q=80&w=2670&auto=format&fit=crop"
    },
    {
        id: 5,
        slug: "where-to-stay-hotel-vs-airbnb",
        title: "Where to Stay: Hotel vs. Airbnb",
        excerpt: "Choosing the right accommodation can make or break your trip. We weigh the pros and cons for every type of traveler.",
        author: "Sofia Neri",
        date: "Oct 08, 2023",
        readTime: "5 min read",
        category: "Hotels",
        image: "https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2670&auto=format&fit=crop"
    },
    {
        id: 6,
        slug: "day-trip-to-portovenere",
        title: "Day Trip to Portovenere",
        excerpt: "Often called the 'sixth village', Portovenere offers a more tranquil but equally stunning experience. Here's why you should visit.",
        author: "Giulia Rossi",
        date: "Oct 05, 2023",
        readTime: "7 min read",
        category: "Guides",
        image: "https://images.unsplash.com/photo-1555979863-69fb96e63359?q=80&w=2670&auto=format&fit=crop"
    }
];

const leadStory = stories[0];
const otherStories = stories.slice(1);
const categories = ["All Stories", "Guides", "Food & Drink", "Culture", "Photography", "Hotels"];
---

<Layout title="The Dispatch | Stories & Guides from Cinque Terre">
    <!-- Hero Section -->
    <section class="relative h-[80vh] min-h-[600px] flex items-center overflow-hidden bg-black">
        <div class="absolute inset-0">
            <img 
                src={leadStory.image} 
                alt={leadStory.title} 
                class="w-full h-full object-cover opacity-60 transition-transform duration-[10s] hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent"></div>
        </div>
        
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl">
                <div class="inline-flex items-center gap-3 px-3 py-1 rounded-full bg-primary/20 backdrop-blur-md border border-primary/30 text-white text-[10px] font-bold uppercase tracking-[0.3em] mb-8">
                    <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                    Featured Story
                </div>
                <h1 class="font-serif text-5xl md:text-8xl font-bold text-white mb-8 leading-[0.9] tracking-tighter">
                    {leadStory.title}
                </h1>
                <p class="text-white/80 text-xl md:text-2xl font-light leading-relaxed max-w-2xl mb-12 font-serif italic">
                    "{leadStory.excerpt}"
                </p>
                <div class="flex flex-wrap items-center gap-8">
                    <a href={`/blog/${leadStory.slug}`} class="group inline-flex items-center gap-3 bg-white text-black px-8 py-4 rounded-full font-bold text-sm uppercase tracking-widest hover:bg-primary hover:text-white transition-all duration-300">
                        Read the Story
                        <ArrowRight className="w-4 h-4 transition-transform group-hover:translate-x-1" />
                    </a>
                    <div class="flex items-center gap-4 text-white/60 text-sm font-medium tracking-widest uppercase">
                        <span class="flex items-center gap-2"><User className="w-4 h-4" /> {leadStory.author}</span>
                        <span class="w-1 h-1 rounded-full bg-white/20"></span>
                        <span class="flex items-center gap-2"><Clock className="w-4 h-4" /> {leadStory.readTime}</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Editorial Intro -->
    <section class="py-24 bg-white border-b border-border/40 relative overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full opacity-[0.02] pointer-events-none">
            <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                <path d="M0 100 C 20 0, 50 0, 100 100" stroke="currentColor" fill="transparent" />
            </svg>
        </div>
        <div class="container mx-auto px-4 relative">
            <div class="max-w-4xl mx-auto text-center space-y-12">
                <div class="inline-flex items-center gap-4">
                    <div class="h-px w-12 bg-primary/30"></div>
                    <span class="text-[10px] font-bold uppercase tracking-[0.5em] text-primary">The Dispatch</span>
                    <div class="h-px w-12 bg-primary/30"></div>
                </div>
                
                <h2 class="font-serif text-4xl md:text-6xl font-bold text-foreground leading-tight">
                    Slow Journalism for a <br/>Fast-Moving Coastline.
                </h2>
                
                <p class="font-serif text-xl md:text-2xl text-muted-foreground leading-relaxed italic max-w-3xl mx-auto">
                    We don't just list places; we tell their stories. From the salt-crusted traditions of the local fishermen to the quietest corners of the high trails, welcome to our curated chronicle of life in the five villages.
                </p>

                <div class="pt-8">
                    <div class="w-16 h-px bg-border mx-auto"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories & Search -->
    <div class="sticky top-0 z-40 bg-white/80 backdrop-blur-xl border-b border-border/40">
        <div class="container mx-auto px-4 py-4">
            <div class="flex flex-col md:flex-row items-center justify-between gap-6">
                <div class="flex items-center gap-2 overflow-x-auto pb-2 md:pb-0 no-scrollbar w-full md:w-auto">
                    {categories.map((cat, i) => (
                        <button class={`px-5 py-2 rounded-full text-[10px] font-bold uppercase tracking-widest whitespace-nowrap transition-all ${i === 0 ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'bg-secondary/50 text-muted-foreground hover:bg-secondary hover:text-foreground'}`}>
                            {cat}
                        </button>
                    ))}
                </div>
                
                <div class="relative w-full md:w-64">
                    <Search className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground" />
                    <input 
                        type="text" 
                        placeholder="Search stories..." 
                        class="w-full pl-12 pr-4 py-2.5 rounded-full bg-secondary/30 border border-transparent focus:border-primary/20 focus:bg-white transition-all text-sm outline-none"
                    />
                </div>
            </div>
        </div>
    </div>

    <!-- Stories Grid -->
    <section class="py-24 bg-white">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-24">
                {otherStories.map((story, index) => (
                    <a href={`/blog/${story.slug}`} class="group block space-y-8">
                        <div class="relative aspect-[4/5] overflow-hidden rounded-2xl shadow-2xl shadow-black/5">
                            <img 
                                src={story.image} 
                                alt={story.title} 
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                            <div class="absolute bottom-8 left-8 right-8 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                                <span class="inline-flex items-center gap-2 text-white text-[10px] font-bold uppercase tracking-widest">
                                    Read Story <ArrowRight className="w-3 h-3" />
                                </span>
                            </div>
                            <div class="absolute top-6 left-6">
                                <span class="px-3 py-1 rounded-full bg-white/90 backdrop-blur-sm text-black text-[9px] font-bold uppercase tracking-widest shadow-sm">
                                    {story.category}
                                </span>
                            </div>
                        </div>
                        
                        <div class="space-y-4">
                            <div class="flex items-center gap-3 text-[10px] font-bold uppercase tracking-widest text-primary">
                                <span>{story.date}</span>
                                <span class="w-1 h-1 rounded-full bg-primary/30"></span>
                                <span>{story.readTime}</span>
                            </div>
                            <h3 class="font-serif text-3xl font-bold text-foreground leading-tight group-hover:text-primary transition-colors">
                                {story.title}
                            </h3>
                            <p class="text-muted-foreground leading-relaxed line-clamp-3 font-serif italic text-lg">
                                "{story.excerpt}"
                            </p>
                            <div class="flex items-center gap-3 pt-4">
                                <div class="w-8 h-8 rounded-full bg-secondary overflow-hidden ring-2 ring-secondary">
                                    <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${story.author}`} alt={story.author} />
                                </div>
                                <span class="text-xs font-bold uppercase tracking-widest text-foreground">{story.author}</span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
            
            <!-- Pagination -->
            <div class="mt-32 flex justify-center">
                <nav class="flex items-center gap-2">
                    <button class="w-12 h-12 rounded-full flex items-center justify-center border border-border text-muted-foreground hover:bg-primary hover:text-white hover:border-primary transition-all">
                        <ChevronRight className="w-5 h-5 rotate-180" />
                    </button>
                    <button class="w-12 h-12 rounded-full flex items-center justify-center bg-primary text-white font-bold text-sm">1</button>
                    <button class="w-12 h-12 rounded-full flex items-center justify-center border border-border text-foreground hover:bg-secondary transition-all font-bold text-sm">2</button>
                    <button class="w-12 h-12 rounded-full flex items-center justify-center border border-border text-foreground hover:bg-secondary transition-all font-bold text-sm">3</button>
                    <span class="px-2 text-muted-foreground">...</span>
                    <button class="w-12 h-12 rounded-full flex items-center justify-center border border-border text-foreground hover:bg-secondary transition-all font-bold text-sm">12</button>
                    <button class="w-12 h-12 rounded-full flex items-center justify-center border border-border text-muted-foreground hover:bg-primary hover:text-white hover:border-primary transition-all">
                        <ChevronRight className="w-5 h-5" />
                    </button>
                </nav>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-32 bg-secondary/30 border-t border-border/40 overflow-hidden relative">
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl mx-auto text-center space-y-12">
                <div class="inline-flex items-center gap-4">
                    <div class="h-px w-12 bg-primary/30"></div>
                    <span class="text-[10px] font-bold uppercase tracking-[0.5em] text-primary">Stay Connected</span>
                    <div class="h-px w-12 bg-primary/30"></div>
                </div>
                
                <h2 class="font-serif text-4xl md:text-6xl font-bold text-foreground leading-tight">
                    Get the Dispatch in <br/>Your Inbox.
                </h2>
                
                <p class="text-xl text-muted-foreground leading-relaxed max-w-2xl mx-auto font-serif italic">
                    Join 15,000+ lovers of the Italian Riviera. No spam, just curated stories, local secrets, and seasonal guides delivered once a month.
                </p>

                <form class="flex flex-col md:flex-row gap-4 max-w-2xl mx-auto pt-8">
                    <input 
                        type="email" 
                        placeholder="your@email.com" 
                        class="flex-1 px-8 py-5 rounded-full bg-white border border-border focus:border-primary/30 outline-none text-lg transition-all shadow-xl shadow-black/5"
                    />
                    <button class="px-10 py-5 rounded-full bg-primary text-white font-bold uppercase tracking-[0.2em] text-sm hover:bg-primary/90 transition-all shadow-xl shadow-primary/20">
                        Subscribe
                    </button>
                </form>
                
                <p class="text-[10px] text-muted-foreground uppercase tracking-widest">
                    By subscribing, you agree to our Privacy Policy and Terms of Service.
                </p>
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    .font-serif {
        letter-spacing: -0.02em;
    }
    
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
