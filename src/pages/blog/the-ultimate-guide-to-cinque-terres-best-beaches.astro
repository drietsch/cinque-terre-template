---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer';
import { Clock, User, Calendar, Share2, MessageSquare, ArrowLeft, ArrowRight, Bookmark, Facebook, Twitter, Instagram, Compass, MapPin, Star, Info } from 'lucide-react';

const post = {
    title: "The Ultimate Guide to Cinque Terre's Best Beaches",
    subtitle: "From the sandy shores of Monterosso to the hidden rocky coves of Riomaggiore, we explore the most pristine swimming spots in the Italian Riviera.",
    author: "Giulia Rossi",
    authorBio: "Born and raised in Riomaggiore, Giulia has spent her life exploring the hidden corners of the Cinque Terre. She is the lead editor of The Dispatch and a certified local guide.",
    date: "October 15, 2023",
    readTime: "8 min read",
    category: "Guides",
    image: "https://images.unsplash.com/photo-1534445867742-43195f401b6c?q=80&w=2670&auto=format&fit=crop",
    tags: ["Swimming", "Summer", "Local Secrets", "Monterosso", "Riomaggiore"]
};

const relatedPosts = [
    {
        title: "5 Hidden Gelaterias You Need to Try",
        slug: "5-hidden-gelaterias-you-need-to-try",
        image: "https://images.unsplash.com/photo-1498503182468-3b51cbb6cb24?q=80&w=2670&auto=format&fit=crop"
    },
    {
        title: "A Photographer's Guide to Manarola",
        slug: "a-photographers-guide-to-manarola-at-sunset",
        image: "https://images.unsplash.com/photo-1516483638261-f4dbaf036963?q=80&w=2574&auto=format&fit=crop"
    }
];
---

<Layout title={`${post.title} | The Dispatch`}>
    <!-- Article Hero -->
    <header class="relative h-[70vh] min-h-[500px] flex items-end pb-24 overflow-hidden bg-black">
        <div class="absolute inset-0">
            <img 
                src={post.image} 
                alt={post.title} 
                class="w-full h-full object-cover opacity-70"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent"></div>
        </div>
        
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl">
                <a href="/blog" class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors text-[10px] font-bold uppercase tracking-[0.3em] mb-12 group">
                    <ArrowLeft className="w-4 h-4 transition-transform group-hover:-translate-x-1" />
                    Back to The Dispatch
                </a>
                
                <div class="space-y-6">
                    <div class="inline-block px-3 py-1 rounded-full bg-primary text-white text-[9px] font-bold uppercase tracking-[0.2em]">
                        {post.category}
                    </div>
                    <h1 class="font-serif text-5xl md:text-7xl lg:text-8xl font-bold text-white leading-[0.9] tracking-tighter">
                        {post.title}
                    </h1>
                    <p class="text-white/80 text-xl md:text-2xl font-light leading-relaxed max-w-3xl font-serif italic">
                        "{post.subtitle}"
                    </p>
                </div>
                
                <div class="flex flex-wrap items-center gap-8 mt-12 pt-12 border-t border-white/10">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-secondary overflow-hidden ring-2 ring-white/20">
                            <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${post.author}`} alt={post.author} />
                        </div>
                        <div>
                            <p class="text-white font-bold text-sm uppercase tracking-widest">{post.author}</p>
                            <p class="text-white/40 text-xs uppercase tracking-widest">{post.date}</p>
                        </div>
                    </div>
                    <div class="h-8 w-px bg-white/10 hidden md:block"></div>
                    <div class="flex items-center gap-6">
                        <div class="flex items-center gap-2 text-white/60 text-[10px] font-bold uppercase tracking-widest">
                            <Clock className="w-4 h-4" /> {post.readTime}
                        </div>
                        <div class="flex items-center gap-4">
                            <button class="text-white/60 hover:text-white transition-colors"><Share2 className="w-4 h-4" /></button>
                            <button class="text-white/60 hover:text-white transition-colors"><Bookmark className="w-4 h-4" /></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Article Content -->
    <main class="py-24 bg-white">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
                
                <!-- Main Column (2/3) -->
                <article class="lg:col-span-8 space-y-12">
                    <div class="prose prose-lg max-w-none">
                        <p class="text-2xl text-foreground/90 leading-relaxed font-serif italic mb-12 first-letter:text-7xl first-letter:font-bold first-letter:text-primary first-letter:mr-3 first-letter:float-left first-letter:leading-[0.8]">
                            The salt air in Cinque Terre is different. It carries the scent of wild thyme from the hills and the ancient stone of the villages. But most importantly, it carries the promise of the sea. For those who know where to look, the five villages offer some of the most spectacular swimming experiences in the Mediterranean.
                        </p>

                        <h2 class="font-serif text-4xl font-bold text-foreground mt-16 mb-8">The Sandy Sanctuary: Monterosso al Mare</h2>
                        <p class="text-lg text-muted-foreground leading-relaxed mb-8">
                            Monterosso is the only village with a proper sandy beach. Fegina, the newer part of town, boasts a long stretch of golden sand and crystal-clear turquoise water. It's the perfect spot for families and those who prefer a more traditional beach experience with umbrellas and sunbeds.
                        </p>
                        
                        <div class="my-16 relative aspect-[21/9] rounded-2xl overflow-hidden shadow-2xl">
                            <img 
                                src="https://images.unsplash.com/photo-1516483638261-f4dbaf036963?q=80&w=2574&auto=format&fit=crop" 
                                alt="Monterosso Beach" 
                                class="w-full h-full object-cover"
                            />
                            <div class="absolute bottom-6 left-6 bg-black/50 backdrop-blur-md text-white px-4 py-2 rounded-lg text-xs font-medium italic">
                                The iconic orange and blue umbrellas of Monterosso.
                            </div>
                        </div>

                        <blockquote class="relative py-12 px-12 my-16 border-y border-primary/10 bg-primary/[0.02] rounded-3xl overflow-hidden">
                            <div class="absolute top-0 left-0 p-8 opacity-[0.05]">
                                <svg class="w-32 h-32 text-primary fill-current" viewBox="0 0 24 24">
                                    <path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H16.017C15.4647 8 15.017 8.44772 15.017 9V12C15.017 12.5523 14.5693 13 14.017 13H13.017C12.4647 13 12.017 12.5523 12.017 12V9C12.017 6.79086 13.8079 5 16.017 5H19.017C21.2261 5 23.017 6.79086 23.017 9V15C23.017 18.866 19.883 22 16.017 22H14.017V21ZM2.01698 21L2.01698 18C2.01698 16.8954 2.91241 16 4.01698 16H7.01698C7.56927 16 8.01698 15.5523 8.01698 15V9C8.01698 8.44772 7.56927 8 7.01698 8H4.01698C3.4647 8 3.01698 8.44772 3.01698 9V12C3.01698 12.5523 2.56927 13 2.01698 13H1.01698C0.4647 13 0.0169824 12.5523 0.0169824 12V9C0.0169824 6.79086 1.80784 5 4.01698 5H7.01698C9.22612 5 11.017 6.79086 11.017 9V15C11.017 18.866 7.88298 22 4.01698 22H2.01698V21Z" />
                                </svg>
                            </div>
                            <p class="relative font-serif text-3xl md:text-4xl text-foreground leading-tight italic font-light">
                                "If you want to swim like a local, you have to embrace the rocks. The best water isn't where the sand is; it's where the cliffs meet the deep blue."
                            </p>
                            <cite class="relative block mt-8 text-sm font-bold uppercase tracking-widest text-primary not-italic">
                                â€” Giulia Rossi, Local Expert
                            </cite>
                        </blockquote>

                        <h2 class="font-serif text-4xl font-bold text-foreground mt-16 mb-8">The Hidden Cove: Riomaggiore's Fossola</h2>
                        <p class="text-lg text-muted-foreground leading-relaxed mb-8">
                            For those willing to walk a bit further, Fossola beach in Riomaggiore offers a wilder experience. This pebble beach is tucked behind the harbor and requires navigating a narrow path along the cliffside. The reward? Deep, emerald water and a sense of isolation that's hard to find in the peak of summer.
                        </p>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 my-16">
                            <div class="aspect-square rounded-2xl overflow-hidden shadow-xl">
                                <img src="https://images.unsplash.com/photo-1534447677768-be436bb09401?auto=format&fit=crop&q=80&w=1000" class="w-full h-full object-cover" alt="Riomaggiore Harbor" />
                            </div>
                            <div class="aspect-square rounded-2xl overflow-hidden shadow-xl">
                                <img src="https://images.unsplash.com/photo-1499678329028-101435549a4e?auto=format&fit=crop&q=80&w=1000" class="w-full h-full object-cover" alt="Coastal Rocks" />
                            </div>
                        </div>

                        <h2 class="font-serif text-4xl font-bold text-foreground mt-16 mb-8">Practical Tips for Swimmers</h2>
                        <ul class="space-y-6 list-none p-0">
                            <li class="flex items-start gap-5 group">
                                <div class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0 group-hover:bg-primary/10 transition-colors">
                                    <Info className="w-5 h-5 text-primary" />
                                </div>
                                <div>
                                    <h4 class="text-lg font-bold text-foreground mb-1">Wear Water Shoes</h4>
                                    <p class="text-muted-foreground">Most beaches are pebbly or rocky. Protect your feet from sharp stones and sea urchins.</p>
                                </div>
                            </li>
                            <li class="flex items-start gap-5 group">
                                <div class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0 group-hover:bg-primary/10 transition-colors">
                                    <Clock className="w-5 h-5 text-primary" />
                                </div>
                                <div>
                                    <h4 class="text-lg font-bold text-foreground mb-1">Go Early</h4>
                                    <p class="text-muted-foreground">The best swimming is before 10 AM when the water is calm and the crowds are still at breakfast.</p>
                                </div>
                            </li>
                            <li class="flex items-start gap-5 group">
                                <div class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0 group-hover:bg-primary/10 transition-colors">
                                    <Compass className="w-5 h-5 text-primary" />
                                </div>
                                <div>
                                    <h4 class="text-lg font-bold text-foreground mb-1">Check the Sea State</h4>
                                    <p class="text-muted-foreground">Even a slight swell can make getting in and out of rocky coves dangerous. Always respect the sea.</p>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <!-- Tags -->
                    <div class="flex flex-wrap gap-3 pt-12 border-t border-border/40">
                        {post.tags.map(tag => (
                            <span class="px-4 py-1.5 rounded-full bg-secondary/50 text-muted-foreground text-[10px] font-bold uppercase tracking-widest hover:bg-secondary hover:text-foreground transition-colors cursor-pointer">
                                #{tag}
                            </span>
                        ))}
                    </div>
                </article>

                <!-- Sidebar Column (1/3) -->
                <aside class="lg:col-span-4 space-y-16 lg:sticky lg:top-32">
                    
                    <!-- Author Profile -->
                    <div class="p-8 rounded-3xl bg-secondary/30 border border-border/40 space-y-6">
                        <div class="flex items-center gap-4">
                            <div class="w-16 h-16 rounded-full bg-white p-1 shadow-lg">
                                <div class="w-full h-full rounded-full overflow-hidden bg-secondary">
                                    <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${post.author}`} alt={post.author} />
                                </div>
                            </div>
                            <div>
                                <p class="text-[10px] font-bold uppercase tracking-widest text-primary mb-1">About the Author</p>
                                <h4 class="text-lg font-bold text-foreground">{post.author}</h4>
                            </div>
                        </div>
                        <p class="text-sm text-muted-foreground leading-relaxed italic font-serif">
                            "{post.authorBio}"
                        </p>
                        <div class="flex items-center gap-4 pt-4 border-t border-border/40">
                            <a href="#" class="text-muted-foreground hover:text-primary transition-colors"><Twitter className="w-4 h-4" /></a>
                            <a href="#" class="text-muted-foreground hover:text-primary transition-colors"><Instagram className="w-4 h-4" /></a>
                            <a href="#" class="text-muted-foreground hover:text-primary transition-colors"><Facebook className="w-4 h-4" /></a>
                        </div>
                    </div>

                    <!-- Key Takeaways -->
                    <div class="space-y-8">
                        <div class="flex items-center justify-between">
                            <h3 class="font-serif text-2xl font-bold text-foreground">Key Takeaways</h3>
                            <div class="h-px flex-1 bg-border/40 ml-6"></div>
                        </div>
                        <div class="space-y-6">
                            <div class="flex gap-4">
                                <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0 text-primary font-bold text-xs">1</div>
                                <p class="text-sm text-muted-foreground leading-relaxed">Monterosso is the only village with a sandy beach.</p>
                            </div>
                            <div class="flex gap-4">
                                <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0 text-primary font-bold text-xs">2</div>
                                <p class="text-sm text-muted-foreground leading-relaxed">Water shoes are essential for rocky coves.</p>
                            </div>
                            <div class="flex gap-4">
                                <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0 text-primary font-bold text-xs">3</div>
                                <p class="text-sm text-muted-foreground leading-relaxed">Early morning is the best time for calm water.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Related Stories -->
                    <div class="space-y-8">
                        <div class="flex items-center justify-between">
                            <h3 class="font-serif text-2xl font-bold text-foreground">Related Stories</h3>
                            <div class="h-px flex-1 bg-border/40 ml-6"></div>
                        </div>
                        <div class="space-y-8">
                            {relatedPosts.map(rel => (
                                <a href={`/blog/${rel.slug}`} class="group flex gap-4">
                                    <div class="w-24 h-24 rounded-xl overflow-hidden flex-shrink-0 shadow-lg">
                                        <img src={rel.image} alt={rel.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                                    </div>
                                    <div class="flex flex-col justify-center">
                                        <h4 class="text-sm font-bold text-foreground group-hover:text-primary transition-colors leading-snug">{rel.title}</h4>
                                        <p class="text-[10px] font-bold uppercase tracking-widest text-muted-foreground mt-2">Read Story</p>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </main>

    <!-- Next Story Navigation -->
    <section class="py-24 bg-secondary/10 border-t border-border/40">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto flex flex-col md:flex-row items-center justify-between gap-12">
                <div class="text-center md:text-left">
                    <p class="text-[10px] font-bold uppercase tracking-[0.4em] text-primary mb-4">Next Story</p>
                    <h3 class="font-serif text-3xl md:text-4xl font-bold text-foreground max-w-md leading-tight">
                        5 Hidden Gelaterias You Need to Try
                    </h3>
                </div>
                <a href="/blog/5-hidden-gelaterias-you-need-to-try" class="group flex items-center gap-6 bg-white p-2 pr-8 rounded-full shadow-2xl shadow-black/5 hover:shadow-primary/10 transition-all">
                    <div class="w-16 h-16 rounded-full overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1498503182468-3b51cbb6cb24?q=80&w=2670&auto=format&fit=crop" class="w-full h-full object-cover" />
                    </div>
                    <span class="font-bold text-sm uppercase tracking-widest group-hover:text-primary transition-colors">Continue Reading</span>
                    <ArrowRight className="w-5 h-5 transition-transform group-hover:translate-x-2" />
                </a>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-32 bg-secondary/30 border-t border-border/40 overflow-hidden relative">
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl mx-auto text-center space-y-12">
                <div class="inline-flex items-center gap-4">
                    <div class="h-px w-12 bg-primary/30"></div>
                    <span class="text-[10px] font-bold uppercase tracking-[0.5em] text-primary">Stay Connected</span>
                    <div class="h-px w-12 bg-primary/30"></div>
                </div>
                
                <h2 class="font-serif text-4xl md:text-6xl font-bold text-foreground leading-tight">
                    Get the Dispatch in <br/>Your Inbox.
                </h2>
                
                <p class="text-xl text-muted-foreground leading-relaxed max-w-2xl mx-auto font-serif italic">
                    Join 15,000+ lovers of the Italian Riviera. No spam, just curated stories, local secrets, and seasonal guides delivered once a month.
                </p>

                <form class="flex flex-col md:flex-row gap-4 max-w-2xl mx-auto pt-8">
                    <input 
                        type="email" 
                        placeholder="your@email.com" 
                        class="flex-1 px-8 py-5 rounded-full bg-white border border-border focus:border-primary/30 outline-none text-lg transition-all shadow-xl shadow-black/5"
                    />
                    <button class="px-10 py-5 rounded-full bg-primary text-white font-bold uppercase tracking-[0.2em] text-sm hover:bg-primary/90 transition-all shadow-xl shadow-primary/20">
                        Subscribe
                    </button>
                </form>
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    .font-serif {
        letter-spacing: -0.02em;
    }
</style>
