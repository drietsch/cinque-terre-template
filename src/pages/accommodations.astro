import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer';
import { Star, MapPin, Clock, Home, Bed, Info, Compass, Waves, Sun, Heart, ArrowUpCircle, Moon } from 'lucide-react';

const accommodations = [
    {
        id: 1,
        name: "Scorci Di Mare",
        category: "Historic Guesthouse",
        village: "Riomaggiore",
        image: "https://images.unsplash.com/photo-1515444744559-7be63e1600de?q=80&w=2670&auto=format&fit=crop",
        intro: "A 14th-century building that sits so close to the harbor you can hear the boats breathing.",
        description: "Scorci Di Mare is for those who want to be at the center of the village's maritime heart. The rooms are carved into the ancient stone, offering a cool, quiet refuge from the sun. The windows frame the iconic view of the stacked houses and the marina, making the village feel like an extension of your own room.",
        giuliaComment: "I always tell people that if you stay here, you should wake up early. Watch the fishermen prepare their boats before the first train arrives. It's the only time the harbor truly belongs to itself, and you have a front-row seat.",
